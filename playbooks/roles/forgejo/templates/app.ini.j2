APP_NAME = {{ gitea_app_name }}
RUN_USER = git
RUN_MODE = prod
WORK_PATH = /var/lib/gitea

[repository]
ROOT = /var/lib/gitea/git/repositories

[repository.local]
LOCAL_COPY_PATH = /tmp/gitea/local-repo

[repository.upload]
TEMP_PATH = /tmp/gitea/uploads

[server]
APP_DATA_PATH = /var/lib/gitea
SSH_DOMAIN = {{ gitea_domain }}
HTTP_PORT = {{ gitea_http_port | default(3000) }}
ROOT_URL = {{ gitea_proto }}://{{ gitea_domain }}/
DISABLE_SSH = {{ gitea_disable_ssh | default(false) }}
; In rootless gitea container only internal ssh server is supported
START_SSH_SERVER = true
SSH_PORT = {{ gitea_ssh_port | default(2222) }}
SSH_LISTEN_PORT = {{ gitea_ssh_port | default(2222) }}
BUILTIN_SSH_SERVER_USER = git
LFS_START_SERVER = true
DOMAIN = {{ gitea_domain }}
LFS_JWT_SECRET = {{ gitea_lfs_jwt_secret }}
OFFLINE_MODE = false

[database]
PATH = /var/lib/gitea/data/gitea.db
DB_TYPE = postgres
HOST = db:5432
NAME = gitea
USER = gitea
PASSWD = {{ gitea_postgres_pw }}
SCHEMA = 
SSL_MODE = disable
LOG_SQL = false

[session]
PROVIDER_CONFIG = /var/lib/gitea/data/sessions
PROVIDER = file

[picture]
AVATAR_UPLOAD_PATH = /var/lib/gitea/data/avatars
REPOSITORY_AVATAR_UPLOAD_PATH = /var/lib/gitea/data/repo-avatars

[attachment]
PATH = /var/lib/gitea/data/attachments

[log]
ROOT_PATH = /var/lib/gitea/data/log
MODE = console
LEVEL = info

[security]
INSTALL_LOCK = true
SECRET_KEY = {{ gitea_secret_key }}
REVERSE_PROXY_LIMIT = 1
REVERSE_PROXY_TRUSTED_PROXIES = *
INTERNAL_TOKEN = {{ gitea_internal_token }}
PASSWORD_HASH_ALGO = pbkdf2_hi

[service]
DISABLE_REGISTRATION = {{ gitea_disable_registration | default(false) }}
REQUIRE_SIGNIN_VIEW = false
REGISTER_EMAIL_CONFIRM = {{ gitea_register_email_confirm | default(false) }}
ENABLE_NOTIFY_MAIL = false
ALLOW_ONLY_EXTERNAL_REGISTRATION = false
ENABLE_CAPTCHA = false
DEFAULT_KEEP_EMAIL_PRIVATE = false
DEFAULT_ALLOW_CREATE_ORGANIZATION = true
DEFAULT_ENABLE_TIMETRACKING = true
NO_REPLY_ADDRESS = {{ gitea_noreply_address | default("noreply.localhost") }}

[lfs]
PATH = /var/lib/gitea/git/lfs

[mailer]
ENABLED = {{ gitea_mailer_enable | default(false) }}
PROTOCOL = {{ gitea_mailer_protocol | default("smtp") }}
SMTP_ADDR = {{ gitea_mailer_smtp_addr | default("none") }}
SMTP_PORT = {{ gitea_mailer_smtp_port | default(465) }}
FROM = {{ gitea_mailer_from_email | default("gitea@example.com") }}
USER = {{ gitea_mailer_user | default("none") }}
PASSWD = {{ gitea_mailer_passwd | default("none") }}

[openid]
ENABLE_OPENID_SIGNIN = true
ENABLE_OPENID_SIGNUP = true

[cron.update_checker]
ENABLED = false

[repository.pull-request]
DEFAULT_MERGE_STYLE = merge

[repository.signing]
DEFAULT_TRUST_MODEL = committer

[oauth2]
JWT_SECRET = {{ gitea_oauth_jwt_secret }}
