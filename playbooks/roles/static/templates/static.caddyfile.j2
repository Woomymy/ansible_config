www.{{ domain }} {{ domain }} {
    import common
    handle {
        root * {{ static_path }}/{{ domain }}
        file_server
    }
    handle_path /.well-known/* {
        root * {{ static_path }}/well-known
        header "Access-Control-Allow-Origin" "*"
        file_server
    }
}

files.{{ domain }} www.files.{{ domain }} {
    import common
    handle {
        root * {{ static_path }}/files
        file_server browse
    }
}
